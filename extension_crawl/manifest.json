{
    "manifest_version": 3,
    "name": "Web Page Crawler",
    "version": "1.0",
    "description": "Crawl the current web page and save HTML content.",
    "permissions": [
      "activeTab", 
      "scripting",
      "storage"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  